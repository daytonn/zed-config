{
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "openai",
      "model": "gpt-4-turbo-preview"
    }
  },
  "auto_update": true,
  "autosave": "on_focus_change",
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_size": 20,
  "chat_panel": {
    "dock": "left"
  },
  "confirm_quit": false,
  "current_line_highlight": "all",
  "cursor_blink": true,
  "format_on_save": "on",
  "features": {
    "inline_completion_provider": "copilot"
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1500
    }
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "languages": {
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "language_overrides": {
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  },
  "lsp": {
    "elixir-ls": {
      "settings": {
        "dialyzerEnabled": false
      }
    }
  },
  "preferred_line_length": 160,
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "project_panel": {
    "button": true,
    "default_width": 150,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 5,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "always"
    }
  },
  "remove_trailing_whitespace_on_save": true,
  "scrollbar": {
    "show": "system"
  },
  "scroll_beyond_last_line": "off",
  "show_completions_on_input": true,
  "show_nav_history_buttons": false,
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "tab_size": 2,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "copy_on_select": true,
    "line_height": "standard",
    "font_family": "FiraCode Nerd Font"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Dolphins 72"
  },
  "ui_font_size": 22,
  "use_autoclose": true
}
