[
  {
    "bindings": {
      "super-,": "zed::OpenSettings",
      "ctrl-,": ["workspace::SendKeystrokes", "ctrl-e ,"],
      "super-alt-,": "zed::OpenKeymap",
      "ctrl-super-\\": "workspace::ToggleLeftDock",
      "super-shift-enter": "workspace::ToggleZoom",
      "ctrl-z": "editor::Undo",
      "ctrl-s": "workspace::Save",
      "ctrl-c": "editor::Copy",
      "ctrl-shift-z": "editor::Redo",
      "ctrl-x": "editor::Cut",
      "ctrl-v": "editor::Paste",
      "ctrl-w": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-f": "editor::MoveRight",
      "ctrl-shift-f": "editor::SelectRight",
      "ctrl-b": "editor::MoveLeft",
      "alt-b": "editor::MoveToPreviousWordStart",
      "ctrl-shift-b": "editor::SelectLeft",
      "alt-shift-b": "editor::SelectToPreviousWordStart",
      "ctrl-n": "editor::MoveDown",
      "alt-f": "editor::MoveToNextWordEnd",
      "ctrl-shift-n": "editor::SelectDown",
      "ctrl-p": "editor::MoveUp",
      "ctrl-shift-p": "editor::SelectUp",
      "ctrl-e": "editor::MoveToEndOfLine",
      "ctrl-shift-e": "editor::SelectToEndOfLine",
      "ctrl-a": "editor::MoveToBeginningOfLine",
      "ctrl-shift-a": "editor::SelectToBeginningOfLine",
      "ctrl-k": "editor::DeleteToEndOfLine",
      "ctrl-shift-k": "editor::DeleteLine",
      "alt-p": "editor::MoveToBeginning",
      "alt-n": "editor::MoveToEnd",

      "super-`": "terminal_panel::ToggleFocus",

      "ctrl-backspace": "editor::DeleteToPreviousWordStart",
      "ctrl-/": ["editor::ToggleComments", { "advance_downwards": false }],

      "alt-v": "pane::SplitRight",
      "alt-h": "pane::SplitDown",
      "super-alt-2": "pane::SplitRight",

      "ctrl-super-p": "editor::MoveLineUp",
      "ctrl-super-n": "editor::MoveLineDown",

      "ctrl-shift-super-p": "editor::AddSelectionAbove",
      "ctrl-shift-super-n": "editor::AddSelectionBelow",
      "ctrl-d": "editor::Delete",

      "ctrl-shift-super-alt-p": "editor::CopyPath",

      "ctrl-left": "editor::Fold",
      "ctrl-right": "editor::UnfoldLines",

      "super-s": "editor::SortLinesCaseSensitive",
      "ctrl-]": "editor::Indent",
      "ctrl-[": "editor::Outdent",

      "super-a": "editor::SelectAll",

      "super-shift-d": "editor::DuplicateLineDown",

      "ctrl-\\": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-|": ["workspace::ActivatePaneInDirection", "Left"],

      "ctrl-`": "workspace::ToggleBottomDock",

      "super-d": ["editor::SelectNext", { "replace_newest": false }],
      "super-alt-d": "editor::UndoSelection",
      "ctrl-enter": "editor::NewlineBelow",
      "ctrl-shift-enter": "editor::NewlineAbove",
      "ctrl-,": ["workspace::SendKeystrokes", "ctrl-e ,"],
      "ctrl-<": ["workspace::SendKeystrokes", "ctrl-e , ctrl-enter"],
      "super-alt-=": ["workspace::SendKeystrokes", "=> "],
      "super-alt-.": ["workspace::SendKeystrokes", "|> "],
      "ctrl-super-alt--": ["workspace::SendKeystrokes", "<- "],
      "ctrl-super-alt-=": ["workspace::SendKeystrokes", "() space => space {} left left left left left left left"],
      "super-f": ["buffer_search::Deploy", { "replace_enabled": true }],
      "super-shift-f": "pane::DeploySearch"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-n": "editor::MoveDown",
      "super-alt-n": "workspace::NewFile",
      "ctrl-t": "file_finder::Toggle",
      "super-t": "file_finder::Toggle",
      "alt-t": "file_finder::Toggle",
      "ctrl-super-alt-p": "command_palette::Toggle",
      "ctrl-super-alt-f": "outline::Toggle"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-n": "editor::MoveDown",
      "super-alt-n": "workspace::NewFile"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "up": "editor::ContextMenuPrev",
      "ctrl-p": "editor::ContextMenuPrev",
      "down": "editor::ContextMenuNext",
      "ctrl-n": "editor::ContextMenuNext",
      "pageup": "editor::ContextMenuFirst",
      "pagedown": "editor::ContextMenuLast"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "super-}": "pane::ActivateNextItem",
      "super-{": "pane::ActivatePrevItem"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-`": "workspace::ToggleBottomDock"
    }
  }
]
